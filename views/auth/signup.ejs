<h2 class="center-align">Sign Up</h2>
<div class="container">
	<form action='/auth/signup' method="POST">
		<div class="row">
			<div class='inpt field col s6'>
				<label for='email'>Email</label>
				<input type='email' id='email' name='email' class='validate'>
			</div>
			<div class='inpt field col s6'>
				<label for='password'>Password</label>
				<input type='password' id='password' name='password' class='validate'>
			</div>
			<div class='inpt field col s6'>
				<label for='firstname'>First Name</label>
				<input type='text' id='firstname' name='firstname'>
			</div>
			<div class='inpt field col s6'>
				<label for='lastname'>Last Name</label>
				<input type='text' id='lastname' name='lastname'>
			</div>
			<div class='inpt field col s8'>
				<label for='address'>Address</label>
				<input type='text' id='address' name='address' placeholder='address'>
			</div>
			<div class='inpt field col s4'>
				<label for='dob'>Birthday</label>
				<input type='date' id='dob' name='dob'>
			</div>
				<button class="btn waves-effect waves-light blue darken-4" type="submit" name="action">Submit<i class="material-icons right"></i></button>			
		</div>
	</form>
</div>
